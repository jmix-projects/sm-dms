<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://documentListView.title"
      focusComponent="documentsDataGrid">
    <data>
        <collection id="documentsDc"
                    class="com.company.smdms.entity.Document">
            <fetchPlan extends="_base">
                <property name="webdavDocument" fetchPlan="_base">
                    <property name="versions" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="documentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Document e]]>
                </query>
            </loader>
        </collection>
        <instance id="documentDc"
                  class="com.company.smdms.entity.Document">
            <fetchPlan extends="_base">
                <property name="webdavDocument" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="documentDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="documentsDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createBtn" action="documentsDataGrid.create"/>
                    <button id="editBtn" action="documentsDataGrid.edit"/>
                    <button id="removeBtn" action="documentsDataGrid.remove"/>
                    <simplePagination id="pagination" dataLoader="documentsDl"/>
                </hbox>
                <dataGrid id="documentsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="documentsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="edit" type="list_edit"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="webdavDocument"/>
                        <column property="title"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectBtn" action="selectAction"/>
                    <button id="discardBtn" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="documentDc">
                    <textField id="titleField" property="title"/>
                    <entityPicker id="webdavDocumentField" property="webdavDocument">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveBtn" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
